<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>axonserver-ee</artifactId>
    <groupId>io.axoniq.axonserver</groupId>
    <version>4.3.3</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>axonserver-stackdriver</artifactId>
  <description>Contains dependencies that should be downloaded as fat jar</description>
  <build>
    <finalName>stackdriver-logging</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>io.axoniq.axonserver</groupId>
      <artifactId>axonserver-enterprise</artifactId>
      <version>4.3.3</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>opencensus-contrib-grpc-metrics</artifactId>
          <groupId>io.opencensus</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opencensus-impl</artifactId>
          <groupId>io.opencensus</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opencensus-exporter-stats-prometheus</artifactId>
          <groupId>io.opencensus</groupId>
        </exclusion>
        <exclusion>
          <artifactId>simpleclient_httpserver</artifactId>
          <groupId>io.prometheus</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opencensus-contrib-zpages</artifactId>
          <groupId>io.opencensus</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opencensus-exporter-trace-jaeger</artifactId>
          <groupId>io.opencensus</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axonserver</artifactId>
          <groupId>io.axoniq.axonserver</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axonserver-connector-api</artifactId>
          <groupId>io.axoniq.axonserver</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axonserver-internal-grpc</artifactId>
          <groupId>io.axoniq.axonserver</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jaxb-runtime</artifactId>
          <groupId>org.glassfish.jaxb</groupId>
        </exclusion>
        <exclusion>
          <artifactId>reactor-core</artifactId>
          <groupId>io.projectreactor</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>io.axoniq.axonserver</groupId>
      <artifactId>axonserver-cluster</artifactId>
      <version>4.3.3</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>mapdb</artifactId>
          <groupId>org.mapdb</groupId>
        </exclusion>
        <exclusion>
          <artifactId>spring-boot-starter-data-jpa</artifactId>
          <groupId>org.springframework.boot</groupId>
        </exclusion>
        <exclusion>
          <artifactId>axonserver-internal-grpc</artifactId>
          <groupId>io.axoniq.axonserver</groupId>
        </exclusion>
        <exclusion>
          <artifactId>reactor-core</artifactId>
          <groupId>io.projectreactor</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.google.cloud</groupId>
        <artifactId>libraries-bom</artifactId>
        <version>4.2.0</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>

