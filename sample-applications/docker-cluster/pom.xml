<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>axonhub</artifactId>
        <groupId>io.axoniq.axonhub</groupId>
        <version>1.2-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>docker-cluster</artifactId>
    <packaging>pom</packaging>

    <properties>
        <gcloud.project.name>axoniq-platform</gcloud.project.name>
        <gcloud.registry>eu.gcr.io</gcloud.registry>
        <docker.certspath>${env.HOMEDRIVE}${env.HOMEPATH}/.docker/machine/certs</docker.certspath>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>sample-command-processor1</artifactId>
            <version>2.0.2.RELEASE</version>
            <classifier>exec</classifier>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>docker</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.26.0</version>
                        <configuration>
                            <images>
                                <image>
                                    <alias>axonhub-cluster</alias>
                                    <name>${gcloud.registry}/${gcloud.project.name}/axonhub-cluster:${project.version}</name>
                                    <build>
                                        <dockerFileDir>${basedir}/src/main/axonhub-cluster</dockerFileDir>
                                    </build>

                                    <run>
                                        <namingStrategy>alias</namingStrategy>
                                        <network>
                                            <name>axoniq</name>
                                            <alias>axonhub</alias>
                                        </network>
                                        <hostname>axonhub.axoniq</hostname>
                                        <ports>
                                            <port>8024:8024</port>
                                            <port>8124:8124</port>
                                            <port>8224:8224</port>
                                        </ports>
                                        <wait>
                                            <log>Tomcat started</log>
                                            <time>30000</time>
                                        </wait>
                                    </run>
                                </image>
                                <image>
                                    <alias>sample-app</alias>
                                    <name>${gcloud.registry}/${gcloud.project.name}/sample-app:${project.version}</name>
                                    <build>
                                        <dockerFileDir>${basedir}/src/main/sample-app</dockerFileDir>
                                        <assembly>
                                            <inline>
                                                <dependencySets>
                                                    <dependencySet>
                                                        <includes>
                                                            <include>org.springframework.boot:sample-command-processor1:jar:exec</include>
                                                        </includes>
                                                        <outputDirectory>.</outputDirectory>
                                                        <outputFileNameMapping>sample-command-processor1.jar</outputFileNameMapping>
                                                    </dependencySet>
                                                </dependencySets>
                                            </inline>
                                        </assembly>

                                    </build>

                                    <run>
                                        <namingStrategy>alias</namingStrategy>
                                        <network>
                                            <name>axoniq</name>
                                            <alias>axonhub</alias>
                                        </network>
                                        <hostname>axonhub.axoniq</hostname>
                                        <ports>
                                            <port>8024:8024</port>
                                            <port>8124:8124</port>
                                            <port>8224:8224</port>
                                        </ports>
                                        <wait>
                                            <log>Tomcat started</log>
                                            <time>30000</time>
                                        </wait>
                                    </run>
                                </image>
                            </images>

                            <certPath>${docker.certspath}</certPath>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>build</goal>
                                    <!-- goal>push</goal -->
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>